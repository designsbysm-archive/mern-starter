{
  "name": "@designsbysm/mock-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "JSONStream": "^1.3.4",
    "bcrypt": "^3.0.0",
    "bluebird": "^3.5.2",
    "boom": "^7.3.0",
    "connect-mongodb-session": "^2.0.3",
    "date-fns": "^2.0.0-alpha.27",
    "dotenv": "^7.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.19",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.9.0",
    "node-sass": "^4.11.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-saml": "^1.0.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^2.1.8",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "devDependencies": {
    "@babel/node": "^7.2.2",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.5.0",
    "stylelint-config-sass-guidelines": "^5.2.0"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon --exec babel-node ./src/server.js",
    "build": "run-p build:*",
    "build:client": "cd client && npm run build",
    "build:server": "babel src -d build",
    "prebuild": "rm -rf build",
    "start": "run-p server client",
    "lint": "run-s lint:prettier lint:js lint:scss",
    "lint:prettier": "run-s lint:server:prettier lint:client:prettier",
    "lint:js": "run-s lint:server:js lint:client:js",
    "lint:scss": "run-s lint:client:scss",
    "lint:server:js": "eslint --fix './src/**/*.js'",
    "lint:server:prettier": "prettier --write './src/**/*'",
    "lint:client:js": "eslint --fix './client/src/**/*.jsx'",
    "lint:client:prettier": "prettier --write './client/src/**/*'",
    "lint:client:scss": "stylelint --fix '.src/**/*.scss'"
  },
  "nodemonConfig": {
    "delay": "500"
  }
}
