{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "build/**/*",
            "config/**/*",
            "dist/**/*",
            "node_modules/**/*",
            "src/vendor/**/*"
        ]
    },
    "rules": {
        "eofline": true,
        "newline-before-return": {
            "severity": "warning"
        },
        "no-console": {
            "severity": "warning"
        },
        "no-trailing-whitespace": true,
        "prefer-const": true,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    },
    "jsRules": {
        "comment-format": [
            true,
            "check-space"
        ],
        "eofline": true,
        "newline-before-return": {
            "severity": "warning"
        },
        "no-console": {
            "severity": "warning"
        },
        "no-trailing-whitespace": true,
        "prefer-const": true,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    }
}
